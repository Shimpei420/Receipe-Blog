<div class = "post_content">
  <div class = "upper_content">
   <p class = "post_title"><%= @post.titles %></p>
   <p class = "poster">By <%= link_to @post.user.name, "/users/#{@post.user_id}", method: :get %></p>
   <% if @post.images.present? %>
    <div class = "image_box"><%= image_tag @post.images, class: "image"%></div>
   <% else %>
    <div class = "image_box"><%= image_tag "default.png", class: "image"%></div> 
   <% end %>
   <p class = "receipe_title">Recipe</p>
   <p class = "post_receipe"><%= @post.receipes %></p>
  </div>
  <div>
   <p>Comment</p>
    <% @comments.each do |comment| %>
    <div>
     <%= comment.comment %>
     By <%= comment.user.name %>
     <%= link_to "Delete", post_comment_path(@post, comment), method: :delete %>
     </div>
    <% end %>
    <% if user_signed_in? %>
     <%= form_with model: [@post, @comment] do |form| %>
      <%= form.text_field :comment, placeholder: "Comment" %>
      <%= form.submit value = "Post" %>
     <% end %>
    <% else %>
     <p>@@ You need to sign in to post the comment @@</p>
     <%= link_to "Sign In", new_user_session_path %> / <%= link_to "Sign Up", new_user_registration_path %>
    <% end %>
  </div>
 <div>
  <%= link_to "Back", root_path %>
 </div>